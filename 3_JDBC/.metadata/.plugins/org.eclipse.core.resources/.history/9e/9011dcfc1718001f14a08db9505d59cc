package note;

import java.util.Scanner;

public class note2 {
	public static void main(String[] args) {
		note2 run = new note2();
		run.test();
	}
	
	
	
	public void test() {
		
		
		Scanner sc=new Scanner(System.in);
		System.out.println("숫자 입력");
		int num = sc.nextInt();
		
		int sum=0;
		
		if(num >0 ) {
			int i=1;
			while (i<=num) {
				sum+= i;
			}
			System.out.println("1부터 "+ num + "까지의 합은"+sum+"입니다.");
		} else {
			System.out.println("숫자가 틀림");
		}
	
	}
	
}
