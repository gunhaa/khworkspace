<comment>Board Service SQL</comment>

	<!--  게시글 목록 조회 -->
	<entry key="selectAll">
SELECT BOARD_NO , BOARD_TITLE, CREATE_DATE , READ_COUNT, MEMBER_NM , (SELECT COUNT(*) FROM REPLY R WHERE R.BOARD_NO= B.BOARD_NO) AS REPLY_COUNT FROM BOARD B JOIN MEMBER USING(MEMBER_NO) ORDER BY BOARD_NO DESC
	</entry>

