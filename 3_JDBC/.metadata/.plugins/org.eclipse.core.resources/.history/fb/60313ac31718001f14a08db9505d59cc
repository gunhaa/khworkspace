package note;

import java.util.Scanner;

public class note2 {
	public static void main(String[] args) {
		note2 run = new note2();
		run.test();
	}
	
	
	
	public void test() {
		
		
		Scanner sc=new Scanner(System.in);
		
		int num = sc.nextInt();
		
		int sum=0;
		
		if(num >0 ) {
			int i=1;
			while (i<=num) {
				sum+= i;
			}
		}
	
	}
	
}
