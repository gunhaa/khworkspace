	$mainVisualItem.on('afterChange', function(event, slick, currentSlide, nextSlide){
		$('.slick-slide').removeClass('action');
		setTimeout(function (){ 
			$('.slick-active').addClass('action'); 
		});
		var cur = currentSlide;
		var videos = $(".main-visual-item").eq(cur).find("div.video");
