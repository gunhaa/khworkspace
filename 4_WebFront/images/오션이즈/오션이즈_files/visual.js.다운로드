	function vimeo_play_and_stop(){
		if(!f || !f.attr("src") ) return;
				
		var url = f.attr("src").split("?")[0];

		$(".stopBtn").click(function(){
			var data = { 
				method: "play",
				value: 1 
			};
					
			f[0].contentWindow.postMessage(JSON.stringify(data), url);
			$('.control1').removeClass('on'); 
			$('.control2').addClass('on');
			switch(sound_onoff){
				case "on":
					$(".onBtn").css("display", "inline-block");
					$(".offBtn").css("display", "none");
					break;
				case "off":
					$(".onBtn").css("display", "none");
					$(".offBtn").css("display", "inline-block");
					break;
			}
		});

		$(".playBtn").click(function(){
			var data = { 
				method: "pause",
				value: 0 
			};
			f[0].contentWindow.postMessage(JSON.stringify(data), url);
			$('.control1').addClass('on'); 
			$('.control2').removeClass('on');
			$(".offBtn").css("display", "inline-block");
			$(".onBtn").css("display", "none");
		});

		$(".onBtn").click(function(){
			var data = { 
				method : "setVolume",
				value: 0 
			};
			f[0].contentWindow.postMessage(JSON.stringify(data), url);
			$('.control2').removeClass('on');
			sound_onoff = "off";
			$(".offBtn").css("display", "inline-block");
			$(".onBtn").css("display", "none");
		});

		$(".offBtn").click(function(){
			var data = { 
				method : "setVolume",
				value: 1 
			};
			f[0].contentWindow.postMessage(JSON.stringify(data), url);
			$('.control2').addClass('on');
			sound_onoff = "on";
			$(".offBtn").css("display", "none");
			$(".onBtn").css("display", "inline-block");
		});
	}

